{
    "manifest_version": 2,
    "name": "Komment",
    "description": "Shows all comments on a given page",
    "version": "1.0",
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "notifications",
        "http://*/",
        "https://*/"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "images/icon.png",
        "default_title": "Komment",     
        "default_popup": "popup.html"        
    }
    
}